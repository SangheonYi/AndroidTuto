<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:cursorVisible="false"
        />
    <TableLayout
        android:id="@+id/tableCalcu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number"
        android:layout_weight = "1">
        <TableRow android:layout_weight = "1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/no1"
                android:text = "1"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/no2"
                android:text = "2"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/no3"
                android:text = "3"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/plus"
                android:text = "+"
                android:onClick="onButtonClick"/>
        </TableRow>
        <TableRow android:layout_weight = "1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/no4"
                android:text = "4"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/no5"
                android:text = "5"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/no6"
                android:text = "6"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/minus"
                android:text = "-"
                android:onClick="onButtonClick"/>
        </TableRow>
        <TableRow android:layout_weight = "1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/no7"
                android:text = "7"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/no8"
                android:text = "8"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/no9"
                android:text = "9"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/multiply"
                android:text = "*"
                android:onClick="onButtonClick"/>
        </TableRow>
        <TableRow android:layout_weight = "1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/no0"
                android:text = "0"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/clear"
                android:text = "clear"
                android:onClick="onButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight = "1"
                android:id="@+id/divide"
                android:text = "/"
                android:onClick="onButtonClick"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableCalcu"
        android:text="OK"
        android:onClick="onButtonClick"/>
</RelativeLayout>